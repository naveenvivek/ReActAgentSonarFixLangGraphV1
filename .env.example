# .env.example - Configuration Template
# Copy this file to .env and update with your actual values

# SonarQube Configuration
SONAR_URL=http://localhost:9100
SONAR_TOKEN=squ_your_sonar_token_here
SONAR_PROJECT_KEY=naveenvivek_SpringBootAppSonarAI

# Target Application Repository  
TARGET_REPO_URL=https://github.com/naveenvivek/SpringBootAppSonarAI
TARGET_REPO_PATH=D:\Intellij\SpringBootAppSonarAI
TARGET_REPO_BRANCH=master

# AI Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:latest

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/sonar_ai_agent.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Structured Logging Configuration
STRUCTURED_LOGGING_ENABLED=true
CONSOLE_COLOR_ENABLED=true
METADATA_MAX_DEPTH=3
METADATA_MAX_LENGTH=1000
PERFORMANCE_LOGGING_ENABLED=true
ERROR_STACK_TRACE_ENABLED=true
CORRELATION_TRACKING_ENABLED=true

# Performance Thresholds
SLOW_OPERATION_THRESHOLD_MS=5000
VERY_SLOW_OPERATION_THRESHOLD_MS=10000
LOW_THROUGHPUT_THRESHOLD=1.0
HIGH_ERROR_RATE_THRESHOLD=0.1

# Git Configuration
GIT_USER_NAME=SonarQube AI Agent
GIT_USER_EMAIL=50246903+naveenvivek@users.noreply.github.com
MR_TARGET_BRANCH=master

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token_here
